<assembly>
    <id>lib</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>./</outputDirectory>
            <unpack>false</unpack>
            <scope>provided</scope>
            <includes>
                <include>com.microsoft.sqlserver:mssql-jdbc:jar</include>
                <include>com.ibm.icu:icu4j:jar</include>
                <include>org.graalvm.*:*:jar</include>
                <include>mysql:mysql-connector-java:jar</include>
                <include>org.hsqldb:hsqldb:jar</include>
                <include>com.h2database:h2:jar</include>
                <include>org.apache.derby:derbyclient:jar</include>
                <include>org.postgresql:postgresql:jar</include>
                <include>org.firebirdsql.jdbc:jaybird:jar</include>
                <include>javax.resource:connector-api:jar</include>
                <include>org.mongodb:mongo-java-driver:jar</include>
                <include>com.ibm.db2:jcc:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>./</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.rapiddweller:*</include>
                <include>org.apache.poi:poi:jar</include>
                <include>org.apache.poi:poi-ooxml-full:jar</include>
                <include>org.apache.commons:commons-math3:jar</include>
                <include>org.apache.commons:commons-collections4:jar</include>
                <include>org.apache.commons:commons-compress:jar</include>
                <include>org.apache.xmlbeans:xmlbeans:jar</include>
                <include>commons-codec:commons-codec:jar</include>
                <include>xerces:xercesImpl:jar</include>
                <include>org.antlr:antlr-runtime:jar</include>
                <include>org.freemarker:freemarker:jar</include>
                <include>javax.validation:validation-api:jar</include>
                <include>xml-apis:xml-apis:jar</include>
                <include>org.apache.logging.log4j:*:jar</include>
                <include>org.slf4j:*:jar</include>
                <include>com.github.javafaker:*:jar</include>
                <include>net.datafaker:*:jar</include>
                <include>org.javassist:javassist:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>
