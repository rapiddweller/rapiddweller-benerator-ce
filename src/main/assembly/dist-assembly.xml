<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- license files and release notes -->
        <fileSet>
            <includes>
                <include>license.txt</include>
            </includes>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>pom.xml</include>
            </includes>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>releasenotes</directory>
            <outputDirectory>releasenotes</outputDirectory>
            <includes>
                <include>releasenotes*.txt</include>
            </includes>
        </fileSet>
        <!-- script files -->
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0744</fileMode>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>benerator_common.bat</exclude>
                <exclude>benerator_common</exclude>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>log4j2.xml</include>
            </includes>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <!-- main -->
        <fileSet>
            <directory>src/main/java</directory>
            <outputDirectory>src</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>*.bat</include>
                <include>*.sh</include>
            </includes>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <!-- tests -->
        <fileSet>
            <directory>src/test/java</directory>
            <outputDirectory>test</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory>test</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <!-- demo -->
        <fileSet>
            <directory>src/demo/java</directory>
            <outputDirectory>demo</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/demo/resources</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <!-- doc -->
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>doc/site</outputDirectory>
            <includes>
                <include>*.pdf</include>
            </includes>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>site</directory>
            <outputDirectory>doc/manual</outputDirectory>
            <excludes>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>__MACOSX</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <!-- filtered script files -->
    <files>
        <file>
            <source>src/main/script/benerator_common.bat</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/script/benerator_common</source>
            <outputDirectory>bin</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>provided</scope>
            <includes>
                <include>com.microsoft.sqlserver:mssql-jdbc:jar</include>
                <include>com.ibm.icu:icu4j:jar</include>
                <include>com.mysql:mysql-connector-j:jar</include>
                <include>org.hsqldb:hsqldb:jar</include>
                <include>com.h2database:h2:jar</include>
                <include>org.apache.derby:derbyclient:jar</include>
                <include>org.postgresql:postgresql:jar</include>
                <include>com.oracle.database.jdbc:ojdbc11:jar</include>
                <include>org.firebirdsql.jdbc:jaybird:jar</include>
                <include>javax.resource:connector-api:jar</include>
                <include>org.mongodb:mongo-java-driver:jar</include>
                <include>com.ibm.db2:jcc:jar</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <useTransitiveDependencies>true</useTransitiveDependencies>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <includes>
                <include>com.rapiddweller:*</include>
                <include>org.apache.poi:poi:jar</include>
                <include>org.apache.poi:poi-ooxml-full:jar</include>
                <include>org.apache.commons:commons-math3:jar</include>
                <include>org.apache.commons:commons-collections4:jar</include>
                <include>org.apache.commons:commons-compress:jar</include>
                <include>org.apache.xmlbeans:xmlbeans:jar</include>
                <include>commons-codec:commons-codec:jar</include>
                <include>org.graalvm.*:*:jar</include>
                <include>xerces:xercesImpl:jar</include>
                <include>org.antlr:antlr-runtime:jar</include>
                <include>org.freemarker:freemarker:jar</include>
                <include>javax.validation:validation-api:jar</include>
                <include>xml-apis:xml-apis:jar</include>
                <include>javax.xml.bind:jaxb-api:jar</include>
                <include>org.glassfish.jaxb:jaxb-runtime:jar</include>
                <include>org.apache.logging.log4j:*:jar</include>
                <include>org.slf4j:*:jar</include>
                <include>net.datafaker:*:jar</include>
                <include>org.javassist:javassist:jar</include>
                <include>commons-io:commons-io:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>

</assembly>
